<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}

           <div class="title">
             <h1>Mastermind :o</h1>
            </div>

            <div class="content-block">


            <div class="style-image"><img src="https://giltesa.com/wp-content/uploads/2010/12/mastermint.png" alt="Mastermind"></div>

            <div class="content-list-games-2">
              <div class="content-list-games_title">
                  <h1>Jugando partida: {{name}}</h1>
              </div>

              <div class="content-list_games_data">
                 {{ form_start(form, {attr: {class: 'formulario'} }) }}
                 {{ form_widget(form) }}
                 {{ form_end(form) }}

                 <h4>{{message}}</h4>


                 <h4>{{restMove}}</h4>
              </div>
                <div><a href="{{ path('index')}}" class="myButton">Volver</a></div>
             </div>

            </div>


             <div>

                  <div><h1>Resultados de la partida:</h1></div>


                  <ol>
                  {% for result in historicResults %}
                      <div>Movimiento: {{result.moveString}} ==> Fichas negras: {% for blackItem in result.blackArray %}
                          <div id="ficha-negra">X</div>
                      {% endfor %}
                      Fichas blancas:
                      {% for whiteItem in result.whiteArray %}
                          <div id="ficha-blanca"></div>
                      {% endfor %}
                      </div>
                  {% endfor %}
                  </ol>



              </div>




        {% endblock %}
        <script src="{{ asset('build/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
